@model CoolCoursach.Models.RegisterModel
 
<h2>Регистрация</h2>
 
<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div>
            <label asp-for="Email"style="font-family:Arial, sans-serif">Введите Email</label><br />
            <input type="text" asp-for="Email" class="input1"/>
            <span asp-validation-for="Email" />
        </div>
        <div>
            <label asp-for="Password"style="font-family:Arial, sans-serif">Введите пароль</label><br />
            <input asp-for="Password" class="input1"/>
            <span asp-validation-for="Password" />
        </div>
        <div>
            <label asp-for="ConfirmPassword"style="font-family:Arial, sans-serif">Повторите пароль</label><br />
            <input asp-for="ConfirmPassword" class="input1"/>
            <span asp-validation-for="ConfirmPassword" />
        </div>
        <div>
            <input type="submit" value="Регистрация" class="btn btn1" />
        </div>
    </div>
</form>
