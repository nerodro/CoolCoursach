         <p>
            Паспортные данные <br />
            @Html.EditorFor(model => model.Passport, new{htmlAttributes = new{@class="form-control"}})
        </p>
         <p>
            Имя матери <br />
            @Html.EditorFor(model => model.MotherName, new{htmlAttributes = new{@class="form-control"}})
        </p>
         <p>
            Фамилия матери <br />
            @Html.EditorFor(model => model.MotherSurname, new{htmlAttributes = new{@class="form-control"}})
        </p>
         <p>
            Имя отца <br />
            @Html.EditorFor(model => model.FatherName, new{htmlAttributes = new{@class="form-control"}})
        </p>
         <p>
            Фамилия отца <br />
            @Html.EditorFor(model => model.FatherSurname, new{htmlAttributes = new{@class="form-control"}})
        </p>
        </div>
        <div class=Inform2>
        <p>
            Дата рождения: <br />
            @Html.EditorFor(model => model.BirthDay, new{htmlAttributes = new{@class="form-control"}})
        </p>
         <p>
            Дата поступления: <br />
            @Html.EditorFor(model => model.StartDate, new{htmlAttributes = new{@class="form-control"}})
        </p>
         <p>
            Дата поступления/отчисления: <br />
            @Html.EditorFor(model => model.EndDate, new{htmlAttributes = new{@class="form-control"}})
        </p>
        @*<p>
            Роль <br />
            @Html.DropDownListFor(model => model.RoleId, ViewBag.Roles as SelectList)
        </p>*@
            <p>
            Группа <br />
            @Html.DropDownListFor(model => model.GroupName, ViewBag.Groups as SelectList,new{htmlAttributes = new{@class="btn btn-secondary dropdown-toggle"}})
        </p>
             <p>
            Специальность <br />
            @Html.DropDownListFor(model => model.FacultName, ViewBag.Facults as SelectList)
        </p>
         <p>
            Статус студента <br />
            @Html.DropDownListFor(model => model.StatusName, ViewBag.Status as SelectList)
        </p>
         <p>
                <label>Фото</label>
                <input name="Photo" type="file"class="form-control" aria-label="file example" />
            </p>

        </div>
        </div>
