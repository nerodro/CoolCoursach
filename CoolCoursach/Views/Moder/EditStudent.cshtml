@{
}
@model CoolCoursach.Models.User

 @using (Html.BeginForm())
        {
    <fieldset>
        <legend>Редактировать студента</legend>

        <p>
            Email пользователя <br />
            @Html.EditorFor(model => model.Email)
        </p>

        <p>
            Пароль <br />
            @Html.EditorFor(model => model.Password)
        </p>
        <p>
            Роль <br />
            @Html.DropDownListFor(model => model.RoleId, ViewBag.Roles as SelectList)
        </p>
            <p>
            Группа <br />
            @Html.DropDownListFor(model => model.GroupName, ViewBag.Groups as SelectList)
        </p>
             <p>
            Специальность <br />
            @Html.DropDownListFor(model => model.FacultName, ViewBag.Facults as SelectList)
        </p>
        <p>
            <input type="submit" value="Сохранить" />
        </p>
        </fieldset>
        }