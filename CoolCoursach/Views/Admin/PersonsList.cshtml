@{
}
@model IEnumerable<CoolCoursach.Models.User>
<h4 class="display-4">Список всех людей</h4>
        @Html.ActionLink("Добавить человека", "AddPerson", "Admin")
<table>
    <tr>
        <td>Имя</td>
        <td>Группа</td>
        <td>Специальность</td>
    </tr>
    @foreach(var User in Model){
    <tr>
        <td>@User.Email</td>
        <td>@User.GroupName</td>
        <td>@User.FacultName</td>
    
    <td>@Html.ActionLink("Редактировать пользователя","EditPerson","Admin", new{Id = User.Id})</td>
    <td>@Html.ActionLink("Удалить пользователя","DeletePerson","Admin", new{Id = User.Id})</td>
        </tr>
    }
    </table>