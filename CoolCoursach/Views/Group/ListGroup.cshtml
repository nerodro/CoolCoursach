@{
}

@model IEnumerable<CoolCoursach.Models.Group>
<h4 class="display-4">Список всех групп</h4>
        @Html.ActionLink("Добавить группу", "AddGroup", "Group")
<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th scope="col">Название группы</th>
    </tr>
  </thead>
  <tbody>
    <tr>
 @foreach(var Group in Model){
    <tr>
        <td>@Group.Name</td>
    
    <td>@Html.ActionLink("Редактировать группу","EditGroup","Group", new{Id = Group.Id})</td>
    <td>@Html.ActionLink("Удалить группу","DeleteGroup","Group", new{Id = Group.Id})</td>
        </tr>
    }
    </tr>
  </tbody>
</table>